# ==========================================
# NashmiBot - Backend Environment
# ==========================================

# App General Info
PROJECT_NAME="NashmiBot"
VERSION="1.0.0"
API_V1_STR="/api/v1"
ENVIRONMENT="development"

# Database (SQLite by default)
DATABASE_URL="sqlite:///./jordan_vision_agent.db"

# ------------------------------------------
# Vertex AI (Primary LLM + Embeddings + Vector Search)
# ------------------------------------------
GCP_PROJECT_ID="your-gcp-project-id"
GCP_LOCATION="us-central1"

# Primary chat model (Vertex)
VERTEX_LLM_MODEL="gemini-2.5-flash"

# Vertex Vector Search configuration (required for retrieval)
VERTEX_INDEX_ID=""
VERTEX_ENDPOINT_ID=""
GCS_BUCKET_NAME=""

# ------------------------------------------
# Groq Fallback (Optional)
# ------------------------------------------
GROQ_API_KEY=""

# Recommended env var:
GROQ_FALLBACK_MODEL="llama3-70b-8192"

# Backward compatibility (also accepted for fallback model):
# MAIN_LLM_MODEL="llama3-70b-8192"

# ------------------------------------------
# Guardrails / Retrieval
# ------------------------------------------
CONFIDENCE_THRESHOLD=0.60
MAX_RETRIEVED_DOCS=5
LLM_REQUEST_TIMEOUT_SECONDS=30

# ------------------------------------------
# Auth (JWT) - set for stable sessions
# ------------------------------------------
JWT_SECRET_KEY="change_me_to_a_long_random_secret"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Optional admin bootstrap (creates/updates an admin on backend startup)
ADMIN_BOOTSTRAP_USERNAME="admin"
ADMIN_BOOTSTRAP_PASSWORD="change_me_now"

